<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:helpshift="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/hs__listPreferredItemPaddingTop"
    android:paddingBottom="12dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_medium"
        android:layout_marginStart="@dimen/activity_horizontal_margin_medium"
        android:layout_weight="4"
        android:gravity="start"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/agent_typing_container"
            style="@style/Helpshift.Style.AdminTextMessageContainer"
            android:gravity="center">

            <com.helpshift.support.views.HSTypingIndicatorView
                android:id="@+id/agent_typing_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                helpshift:hs__dotColor="?attr/hs__typingIndicatorColor"
                helpshift:hs__interDotPadding="4dp"
                helpshift:hs__dotDiameter="8dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
</LinearLayout>
