<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Helpshift.Style.AdminMessageDate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">@dimen/hs__listPreferredItemPaddingBottom</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">@dimen/hs__textSizeExtraSmall</item>
    </style>
    <style name="Helpshift.Style.AdminTextMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/hs__msgPreferredItemPaddingLeft</item>
        <item name="android:paddingStart">@dimen/hs__msgPreferredItemPaddingLeft</item>
        <item name="android:paddingRight">@dimen/hs__msgPreferredItemPaddingRight</item>
        <item name="android:paddingEnd">@dimen/hs__msgPreferredItemPaddingRight</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">?attr/hs__chatBubbleAdminText</item>
        <item name="android:textColorLink">?attr/hs__chatBubbleAdminLink</item>
        <item name="android:textSize">@dimen/hs__textSizeMedium</item>
    </style>
    <style name="Helpshift.Style.UserMessageDate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">@dimen/hs__listPreferredItemPaddingBottom</item>
        <item name="android:textSize">@dimen/hs__textSizeExtraSmall</item>
    </style>
    <style name="Helpshift.Style.UserTextMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/hs__msgPreferredItemPaddingLeft</item>
        <item name="android:paddingStart">@dimen/hs__msgPreferredItemPaddingLeft</item>
        <item name="android:paddingRight">@dimen/hs__msgPreferredItemPaddingRight</item>
        <item name="android:paddingEnd">@dimen/hs__msgPreferredItemPaddingRight</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">?attr/hs__chatBubbleUserText</item>
        <item name="android:textColorLink">?attr/hs__chatBubbleUserLink</item>
        <item name="android:textSize">@dimen/hs__textSizeMedium</item>
    </style>
</resources>